<%- include('partials/_header') %>


<div class="container">
    <div class="row mt-5">
        
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/categorias/add" method="post">
                        <div class="from-group">
                            <input type="text" name="nombre" placeholder="Name" class="form-control">
                        </div>
                        <div class="from-group">
                            <input type="text" name="descripcion" placeholder="Descripcion" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                           Save categorias
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>N</th>
                        <th>Nombre</th>
                        <th>Descripcion</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="tbody">
                   <% if(data){ %>
                        <% for (let i=0; i < data.length; i++){ %>
                            <tr> 
                                <td><%= (i+1) %></td>
                                <td><%= data[i].nombre %></td>
                                <td><%= data[i].descripcion %></td>
                                
                               
                                <td>
                                    <a href="/categorias/delete/<%= data[i].id %>" class="btn btn-danger">Delete</a>
                                    <a href="/categorias/update/<%= data[i].id %>" class="btn btn-info">Editar</a>
                                </td>
                            </tr>
                       <% } %>
                    <% }  %>
                </tbody>
            </table>
        </div>
    </div>
</div>


<%- include('partials/_footer') %>
