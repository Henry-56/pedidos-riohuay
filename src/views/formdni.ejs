<%- include('partials/_header') %>

<style>
  .container-form {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
  }

  .section {
    margin-bottom: 40px;
  }

  h2 {
    font-size: 24px;
    margin-bottom: 20px;
  }

  label {
    font-weight: bold;
  }

  input[type="text"] {
    width: 100%;
    padding: 10px;
    margin-bottom: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  input[type="submit"] {
    background-color: #59ab6e;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  .product-cards {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    gap: 20px;
  }

  .card {
    width: 100%;
    padding: 20px;
    background-color: #f5f5f5;
    border-radius: 4px;
  }

  .card p {
    margin-bottom: 10px;
  }

  .error-message {
    color: red;
  }
  
</style>

<div class="container-form">
  <div class="section">
    <h2>Buscar por DNI</h2>
    <form id="dni-form" method="post" action="/consulta/dni">
      <label for="dni">Ingresa tu DNI:</label><br>
      <input type="text" id="dni" name="dni" required><br>
      <input type="submit" value="Buscar">
    </form>

    <div class="product-cards">
      <% if(resultadoConsulta){ %>
        <div class="card">
          <p>Nombre: <%= resultadoConsulta.nombres %></p>
          <p>Apellido Paterno: <%= resultadoConsulta.apellidoPaterno %></p>
          <p>Apellido Materno: <%= resultadoConsulta.apellidoMaterno %></p>
        </div>
      <% } %>
    </div>
  </div>

  <div class="section">
    <h2>Información del pedido</h2>
    
    <form id="contact-form" method="post" action="/pedidos/add" onsubmit="return validateForm()">
      <label for="direccion">Indique dirección de emvio:</label><br>
      <input type="text" id="direccion" name="direccion" required><br>
      <label for="telefono">Teléfono:</label><br>
      <input type="text" id="telefono" name="telefono" required><br>
      <input type="submit" value="Finalizar pedido">
    </form>
  </div>
</div>


<%- include('partials/_footer') %>
